<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <h2 class="intro-text text-center">Formulário de
        <strong>Contacto</strong>
      </h2>
      <hr>
      <p class="text-center">Se tens alguma dúvida, questão ou sugestão não hesites em contactar.</p>

      <%= form_for :contact, url: contacts_path do |f| %>
      <div class="form-group col-lg-6">
        <%= f.label :name, "Nome" %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group col-lg-6">
        <%= f.label :email, "Email" %>
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <div class="form-group col-lg-12">
        <%= f.label :title, "Assunto" %>
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
      <div class="clearfix"></div>
      <div class="form-group col-lg-12">
        <%= f.label :message, "Mensagem" %>
        <%= f.text_area :message, :style => 'resize: vertical;', :type => 'text', :class => 'form-control', :rows => '6' %>
      </div>
      <div class="form-group col-lg-12">
        <%= f.submit "Submeter", :class => 'btn btn-default' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
