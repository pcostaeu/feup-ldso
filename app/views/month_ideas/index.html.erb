<%= render "layouts/admin_header" %>


<div class="container" id="ideas">
  <% @ideas.each do |idea| %>
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center">
        <h2><%= idea.title %><br>
          <small><%= idea.date %></small>
        </h2>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <% if idea.picture? %>
          <img class="img-responsive img-border img-full" src=<%=idea.picture.url%> >
          <% end %>
        </div>
        <p><%= idea.text %></p>
      </div>
      <div class="col-lg-12">
        <div class="col-lg-6">
          <h3>Autor:
            <small>
              <%= idea.author %>
            </small>
          </h3>
        </div>
        <div class="col-lg-3">
          <h3>Data:
            <small>
              <%= idea.date %>
            </small>
          </h3>
        </div>
        <div class="btn-group btn-group-sm botoes col-lg-3">
            <%= button_to 'Selecionar Ideia', select_month_idea_path(idea), method: :post, role:"button" ,class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
