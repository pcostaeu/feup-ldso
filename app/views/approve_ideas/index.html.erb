<%= render "layouts/admin_header" %>

<div class="container" id="ideas">
  <% @ideas.each do |idea| %>
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <div class="col-lg-3">
          <img class="img-responsive img-center" src="http://clubedodesign.com/wp-content/uploads/2014/09/idead.jpg">
        </div>
        <div class="col-lg-9 text-justify">
          <h3>
            <%= idea.title %></h3>
          <p>
            <%= idea.text %></p>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="col-lg-6">
          <h3>Autor:
            <small>
              <%= idea.author %>
            </small>
          </h3>
        </div>
        <div class="col-lg-3">
          <h3>Data:
            <small>
              <%= idea.date %>
            </small>
          </h3>
        </div>
        <div class="btn-group btn-group-sm botoes col-lg-3">
          <%= button_to 'Aprovar', approve_approve_idea_path(idea), method: :post, role:"button" ,class:"btn btn-success" %>
          <%= button_to 'Rejeitar', delete_approve_idea_path(idea), method: :post, role:"button" , class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
