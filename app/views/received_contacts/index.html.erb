<%= render "layouts/admin_header" %>

<div class="container" id="ideas">
  <ul class="nav nav-tabs back-color">
    <li class="active">
      <a data-toggle="tab" href="#nlidos">Por ler</a>
    </li>
    <li>
      <a data-toggle="tab" href="#lidos">Lidas</a>
    </li>
  </ul>

  <div class="row">
    <div class="box">
      <div class="tab-content">

        <div class="tab-pane fade in active" id="nlidos">
          <% @received_contacts.each do |contact| %>
          <div class="col-lg-12">
            <div class="col-lg-12 text-justify">
              <h4>Assunto:
                <%= contact.title %>
              </h4>
              <p>
                <%= contact.message %>
              </p>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="col-lg-6">
              <h4>Nome:
                <small>
                  <%= contact.name %>
                </small>
              </h4>
            </div>
            <div class="col-lg-6" id="email">
              <h4>Email:
                <small>
                  <%= contact.email %>
                </small>
              </h4>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="col-lg-6">
              <h4>Data:
                <small>
                  <%= contact.date %>
                </small>
              </h4>
            </div>
            <div class="btn-group botaolida col-lg-6" id="email">
              <%= button_to 'Marcar como lida', read_received_contact_path(contact), method: :post, class: "btn btn-success" %>
              <%= button_to 'Apagar', delete_received_contact_path(contact), method: :post, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="col-lg-12">
            <hr>
          </div>
          <% end %>
        </div>

        <div class="tab-pane fade" id="lidos">
          <% @received_contacts_read.each do |contact| %>
          <div class="col-lg-12">
            <div class="col-lg-12 text-justify">
              <h4>Assunto:
                <%= contact.title %>
              </h4>
              <p>
                <%= contact.message %>
              </p>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="col-lg-6">
              <h4>Nome:
                <small>
                  <%= contact.name %>
                </small>
              </h4>
            </div>
            <div class="col-lg-6" id="email">
              <h4>Email:
                <small>
                  <%= contact.email %>
                </small>
              </h4>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="col-lg-6">
              <h4>Data:
                <small>
                  <%= contact.date %>
                </small>
              </h4>
            </div>
            <div class="botaolida col-lg-6" id="email">
              <%= button_to 'Apagar', delete_received_contact_path(contact), method: :post, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="col-lg-12">
            <hr>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
