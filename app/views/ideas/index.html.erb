<%= render "layouts/pt_header" %>

<div class="container" id="ideas">

  <% if @ideas.size != 0 %>
  <div class="row">
    <div class="box">
      <% @ideas.each do |idea| %>
      <div id=idea<%=idea.id %> class="col-lg-12 text-center">
        <h2>[<%= idea.topic.name %>]
          <%= idea.title %><br>
          <small><%= idea.date.strftime("%B %d, %Y")  %></small>
        </h2>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <% if idea.picture? %>
          <img class="img-responsive img-border img-full" src=<%=idea.picture.url %> >
          <% else %>
          <img class="img-responsive img-border img-full" src=<%=idea.topic.picture.url %>>
          <% end %>
        </div>
        <p><%= idea.resumo %></p>
        <p><%= idea.text %></p>
        <div class="col-lg-12">
          <hr>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <% end %>
</div>
