<%= render "layouts/pt_header" %>

<div class="container" id="ideas">
  <div class="row">
    <div class="box">
      <h1 class="text-center">Pré-visualização</h1>

      <div class="col-lg-12 text-center">
        <h2><%= @idea.title %><br>
          <small><%= @idea.date.strftime("%B %d, %Y")  %></small>
        </h2>
        <% if @idea.picture? %>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <img class="img-responsive img-border img-full" src=<%= @idea.picture.url %> >
        </div>
        <% end %>
        <p><%= @idea.text %></p>
      </div>

      <div class="col-lg-12 text-center">
        <br>
        <%= button_to 'Cancelar submisaão', cancel_idea_path(@idea), method: :post, role:"button" ,class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
