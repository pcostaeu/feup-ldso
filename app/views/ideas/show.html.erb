<%= render "layouts/pt_header" %>

<div class="row">
  <div class="box">
    <div class="col-lg-12 text-center">
      <h2><%= @idea.title  %><br>
        <small>October 15, 2015</small>
      </h2>
      <div class="col-xs-12 col-sm-12 col-md-4">
        <img class="img-responsive img-border img-full" src="img/slide-1.jpg" alt="">
      </div>
      <p><%= @idea.text %></p>
    </div>
    <div class="center-block text-center">
      <a href="#" class="btn btn-default">Gostei da ideia</a>
      <a href="#" class="btn btn-default">Não gostei da ideia</a>
      <table id="votes"><tr><td><h5>Votação: </h5></td><td><h4 id="upvote">+50</h4></td><td><h4 id="downvote">-20</h4></td></tr></table>
      <hr>
    </div>
  </div>
</div>
