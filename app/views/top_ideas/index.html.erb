<%= render "layouts/admin_header" %>

<div class="container" id="ideas">
    <% @ideas.each do |idea| %>
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <h2><%= idea.title %><br>
                    <small>Ideia submetida a
                        <%= idea.date.strftime("%d %B, %Y")  %></small>
                </h2>
                <% if idea.picture? %>
                <div class="col-xs-12 col-sm-12 col-md-4">
                    <img class="img-responsive img-border img-full" src="<%=idea.picture.url%>">
                </div>
                <% end %>
                <h4>Resumo</h4>
                <p><%= idea.resumo %></p>
                <br>
                <% if idea.text != "" %>
                <div id='text<%=idea.id%>' style="display: none;">
                    <h4>Descrição</h4>
                    <p><%= idea.text %></p>
                </div>
                <button class="btn btn-default btn-md" id='showMoreButton<%= idea.id %>' onclick='showMore(<%= idea.id %>)' type="button">
                    <span class="icon-stack">
                        <i class="glyphicon glyphicon-plus"></i>
                    </span>
                    Mostrar Mais
                </button>
                <button class="btn btn-default btn-md" id='showLessButton<%= idea.id %>' onclick='showLess(<%= idea.id %>)' style="display: none;" type="button">
                    <span class="icon-stack">
                        <i class="glyphicon glyphicon-minus"></i>
                    </span>
                    Mostrar Menos
                </button>
                <% end %>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-6" style="padding:0px;">
                    <h4>Autor:
                        <small>
                            <%= idea.author %>
                        </small>
                    </h4>
                </div>
                <div class="col-lg-6" style="padding:0px;">
                    <h4>Email:
                        <small>
                            <%= idea.email %>
                        </small>
                    </h4>
                </div>
                <% if idea.author2? %>
                <div class="col-lg-6" style="padding:0px;">
                    <h4>Autor:
                        <small>
                            <%= idea.author2%>
                        </small>
                    </h4>
                </div>
                <div class="col-lg-6" style="padding:0px;">
                    <h4>Email:
                        <small>
                            <%= idea.email2%>
                        </small>
                    </h4>
                </div>
                <% end %>
                <% if idea.author3? %>
                <div class="col-lg-6" style="padding:0px;">
                    <h4>Autor:
                        <small>
                            <%= idea.author3%>
                        </small>
                    </h4>
                </div>
                <div class="col-lg-6" style="padding:0px;">
                    <h4>Email:
                        <small>
                            <%= idea.email3%>
                        </small>
                    </h4>
                </div>
                <% end %>
            </div>
            <div class="col-lg-12">
                <% if idea.auts == "aut_full" %>
                <h4>Autorização:
                    <small>completa</small>
                </h4>
            <% else %>
                <h4>Autorização:
                    <small>parcial</small>
                </h4>
                <%end%>
            </div>
            <div id="idea<%= idea.id %>">
                <%= button_to 'Remover Destaque', remove_top_idea_path(idea), method: :post, remote: true, role:"button" , class:"btn btn-danger", style:"float: right", data: { confirm: 'Tem a certeza?' } %>
            </div>
        </div>
    </div>
    <%end%>
</div>
