<%= render "layouts/pt_header" %>

<div class="row" id="submitIdea">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Adicionar uma categoria
      </h2>
      <hr>
      <%= form_for :topic, url: topics_path do |f| %>
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :name, "Categoria" %>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <div class="form-group col-lg-12">
          <label>Escolha uma imagem que identifique a categoria: </label>
          <%= f.file_field :picture, :class => 'btn btn-default'%>
        </div>
        <div class="form-group col-lg-12">
          <%= f.submit "Submeter", :class => 'btn btn-default' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
