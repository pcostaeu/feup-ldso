<%= render "layouts/admin_header" %>

<div class="container" id="ideas">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Adicionar uma categoria
        </h2>
        <hr>
        <%= form_for :topic, url: topics_path do |f| %>
        <div class="row">
          <div class="form-group col-lg-6">
            <%= f.label :name, "Categoria" %>
            <%= f.text_field :name, :class => 'form-control', :required => true, :'data-errormessage-value-missing' => 'Nome obrigatório' %>
          </div>
          <div class="form-group col-lg-12">
            <label style="float:left;">Escolha uma imagem que identifique a categoria:</label>
            <div class="col-lg-6">
              <%= f.file_field :picture , :required => true, :'data-errormessage-value-missing' => 'Imagem obrigatória'%>
            </div>
          </div>
          <div class="form-group col-lg-12">
            <%= f.submit "Submeter", :class => 'btn btn-default' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
