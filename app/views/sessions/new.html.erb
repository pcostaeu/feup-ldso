<div class="brand">Mais IS</div>

<nav class="navbar navbar-default navbar-static" id="nav" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="index.html">Mais IS</a>
  </div>
</nav>

<div class="container" id="login">

  <div class="row">
    <div class="col-lg-12 text-center">
      <div aria-hidden="true" class="show" id="loginModal" role="dialog" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" id="modal-header">
              <h1 class="text-center">Login</h1>
            </div>
            <div class="modal-body">
              <%= form_tag sessions_path do %>
              <div class="form col-md-12 center-block">
                <% if flash[:alert] %>
                  <div class="alert alert-danger">
                    <strong><%= flash[:alert] %></strong>
                  </div>
                <% end %>
                <div class="form-group">
                  <%= text_field_tag :email, nil, class:'form-control input-lg', :placeholder => 'Email', :style => "text-align: left" %>
                </div>
                <div class="form-group">
                  <%= password_field_tag :password, nil, class: 'form-control input-lg', :placeholder => 'Password' %>
                </div>
                <div class="form-group">
                  <%= submit_tag "Entrar", class: 'btn btn-primary btn-lg btn-block' %>
                </div>
              </div>
              <% end %>
            </div>
            <div class="modal-footer" id="modal-footer"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
