<%= form_for :admin do |f| %>
<% if flash[:alertC] %>
  <div class="alert alert-danger">
    <strong><%= flash[:alertC] %></strong>
  </div>
<% end %>

<div class="form center-block">
  <div class="form-group">
    <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email', :required => true, pattern: "([A-Za-z0-9.]*)@fe.up.pt", :'data-errormessage-value-missing' => 'Email obrigatório' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password', :required => true, :'data-errormessage-value-missing' => 'Password obrigatória' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirme a password', :required => true, :'data-errormessage-value-missing' => 'Confirmação obrigatória' %>
  </div>
  <div class="actions">
    <%= f.submit "Submeter", :class => 'btn btn-primary' %>
  </div>
</div>
<% end %>
